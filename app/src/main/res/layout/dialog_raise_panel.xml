<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:gravity="center"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/tx_raiseAmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="100k"
		android:textSize="28dp"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:weightSum="1">

		<com.hmrocket.magicpoker.view.CircularSeekBar
			android:id="@+id/circularSeekBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="1.88"
			app:circle_color="@color/background_controller_grey"
			app:circle_progress_color="@color/raise_70p"
			app:end_angle="60"
			app:pointer_color="@color/raise_70p"
			app:pointer_halo_color="@color/raise_25p"
			app:pointer_halo_color_ontouch="@color/raise"
			app:progress="20"
			app:start_angle="120"/>

		<TextView
			android:id="@+id/tx_raisePercentage"
			android:layout_width="94dp"
			android:layout_height="33dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="22.5%"
			android:textSize="28dp"/>

		<TextView
			android:id="@+id/tx_stack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|bottom"
			android:gravity="center"
			android:text="1.5M"
			android:textSize="28dp"/>
	</FrameLayout>

</LinearLayout>