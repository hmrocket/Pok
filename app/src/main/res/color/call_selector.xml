<?xml version="1.0" encoding="utf-8"?>
<!-- Flat Dark/Dark theme (google design)-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Disabled : 25% of the color, call -->
	<item android:color="@color/call_25p" android:state_enabled="false"/>
	<!-- Pressed: 100% of the color, call color -->
	<item android:color="@color/call" android:state_pressed="true"/>
	<!-- Normal: 70% of the color, call color -->
	<item android:color="@color/call_70p"/>
</selector>